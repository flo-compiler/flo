import write, close from "@flo/sys"
import string from "@flo/core/string"
/* TODO: Make headers a hash map once you Map class*/
class Response {
    connection: int
    fnc set_connection(connection: int) {
        this.connection = connection
    }
    fnc write(data: string): Response{
        write(this.connection, data.buffer, data.length)
        return this
    }
    fnc end(message: string = ""){
        this.write(message)
        close(this.connection)
    }
}