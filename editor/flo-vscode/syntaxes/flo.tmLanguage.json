{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "flo",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#control-keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include":"#reserved-constants"
		},
		{
			"identifier": "#identifiers"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.other.flo",
				"match": "\\b(and|or|xor|num|bool|int|float|void|fnc|class|pub|priv)\\b"
			}]
		},
		"control-keywords":{
			"name": "keyword.control.flo",
			"match": "\\b(if|else|for|while|break|continue|return|import|from|foreach|in|as|is)\\b"
		},
		"strings": {
			"name": "string.quoted.double.flo",
			"begin": "\"|'",
			"end": "\"|'",
			"patterns": [
				{
					"name": "constant.character.escape.flo",
					"match": "\\\\."
				}
			]
		},
		"comments":{
			"patterns": [
				{
					"match": "/\\*\\*/",
					"name": "comment.block.flo"
				},
				{
					"begin": "/\\*",
					"end": "\\*/",
					"name": "comment.block.flo"
				},
				{
					"begin": "//",
					"end": "\\n",
					"name": "comment.block.flo"
				}
			]
		},
		"numbers":{
			"patterns": [
				{
					"name":"keyword.other.unit.flo",
					"match":"([0-9]+\\.?[0-9]*)"
				}
			]
		},
		"identifiers":{
			"patterns": [
				{
					
					"name":"support.variable.flo",
					"match": "(([a-zA-Z]|_)[A-Za-z | 0-9 | _]*)"
				}
			]
		},
		"reserved-constants":{
			"patterns": [
				{
					"name": "constant.language.flo",
					"match": "\\b(true|false|null|this)\\b"
				}
			]
		}
	},
	"scopeName": "source.flo"
}