const HEIGHT: uint = 10
const WIDTH: uint = 10
fnc fill_array(arr: uint*, width: uint, height: uint, value: uint){
    for i in 0..width*height {
        arr[i] = value
    }
}
let array: uint[WIDTH * HEIGHT] = null

fnc main(): uint {
    const bg_color = 0xFFA498
    fill_array(&array[0], WIDTH, HEIGHT, bg_color)
    return 0
}